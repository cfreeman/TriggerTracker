<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/org.triggertracker"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
      
    <org.triggertracker.PlayerRadarView
        android:id="@+id/Radar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:background="@android:color/white"
        android:padding="10dp"
        custom:highlightStrength="1.12"
        custom:labelColor="@android:color/black"
        custom:labelHeight="20dp"
        custom:labelPosition="left"
        custom:labelWidth="110dp"
        custom:labelY="85dp"
        custom:showText="true" />

</LinearLayout>